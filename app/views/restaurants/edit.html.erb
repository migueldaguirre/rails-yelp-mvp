<div class="container">
<h1>Edit restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["french", "italian", "chinese", "belgian", "japanese"] %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>

</div>
